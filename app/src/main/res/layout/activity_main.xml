<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/mainmenuline"
        android:id="@+id/mainmenuline" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/mainmenuline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/leaf"
            android:layout_below="@id/mainmenuline"
            android:layout_toLeftOf="@+id/name"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="_____"
            android:id="@+id/textname"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  님, 안녕하세요."
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/name"/>
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mainmenubtn1"
        android:id="@+id/mainmenubtn1"
        android:layout_below="@+id/mainmenuline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:text="포인트 적립을 위한 QR코드 리더기 입니다.\n 가게의 QR코드를 준비해주세요."
        android:layout_below="@+id/mainmenubtn1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/mainmenutv1"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mainmenubtn2"
        android:id="@+id/mainmenubtn2"
        android:layout_below="@+id/mainmenutv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="내가 적립한 포인트를 해당 가게에서 사용해 보세요."
        android:layout_below="@+id/mainmenubtn2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/mainmenutv2"/>


</RelativeLayout>